{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "sourceMap": true,
    "types": ["cypress", "node", "jest", "@testing-library/cypress"]
  },
  "include": [
    "cypress/**/*.ts",
    "cypress/tasks/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}