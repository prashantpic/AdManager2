{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "lib": ["ES2021"],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": [
        "./node_modules/@types"
    ]
  },
  "include": [
    "data-source.ts",
    "database/migrations/**/*.ts",
    "database/seeds/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}